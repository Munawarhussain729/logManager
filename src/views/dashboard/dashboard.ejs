<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            color: white;
        }

        h1,
        h2,
        h6,
        p,
        li {
            color: white !important;
        }
    </style>
</head>

<body>

    <div class="dashboard">
        <div class="content">
            <h1>Welcome to <%= title %>
            </h1>
            <div class="flex-container">
                <div>
                    <p>Today's Hours</p>
                    <p class="boldText" id="daily-hours">
                        <%= currentDayHours %> hours
                    </p>
                </div>
                <div>
                    <p>Time logged in July 2024</p>
                    <p class="boldText">
                        <%= duration %> hours
                    </p>
                </div>
                <div>
                    <p>Total Leaves</p>
                    <p class="boldText">
                        <%= totalLeaves %>
                    </p>
                </div>
                <div>
                    <p>Pending Leaves</p>
                    <p class="boldText">
                        <%= pendingLeaves %>
                    </p>
                </div>
            </div>


            <div class="flex-container" style="margin-top: 20px;">
                <div style="flex: 1; padding: 15px; background-color: #34495e; border-radius: 8px;">
                    <h2>Recent Logs</h2>
                    <ul style="list-style: none; padding: 0;">
                        <% recentLogs.forEach(log=> { %>
                            <li
                                style="padding: 10px; margin-bottom: 8px; background-color: #2c3e50; border-radius: 5px;">
                                <strong>
                                    <%= log.timestamp %>:
                                </strong>
                                <%= log.message %>
                            </li>
                            <% }); %>
                    </ul>
                </div>


                <div style="flex: 1; padding: 15px; background-color: #34495e; border-radius: 8px;">
                    <h2>Productivity Stats</h2>
                    <canvas id="productivityChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Injecting EJS variables into JavaScript
            const productivityLabels = <%- productivityLabels %>;
            const productivityData = <%- productivityData %>;
    
            console.log("productivityLabels: ", productivityLabels);
            console.log("productivityData: ", productivityData);
    
            const ctx = document.getElementById('productivityChart');
            if (!ctx) {
                console.error("Chart canvas not found!");
                return;
            }
    
            new Chart(ctx.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: productivityLabels,
                    datasets: [{
                        label: 'Hours Logged',
                        data: productivityData,
                        backgroundColor: '#1abc9c'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: { ticks: { color: 'white' } },
                        y: { ticks: { color: 'white' } }
                    }
                }
            });
        });
    </script>
    
</body>

</html>